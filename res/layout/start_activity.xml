<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@android:color/white"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/start_activity_device_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/start_activity_device_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/start_activity_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/start_activity_device_image"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/start_activity_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_activity_user_name"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/start_activity_device_image"
            android:text="@string/hello_world" />

        <TextView
            android:id="@+id/start_activity_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_activity_company_name"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/start_activity_device_image"
            android:text="Samsung" />

        <View
            android:id="@+id/start_activity_first_devider"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/start_activity_device_name"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/start_activity_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/start_activity_first_devider"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/start_activity_id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="id" />

                <TextView
                    android:id="@+id/start_activity_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="123654564564" />
            </LinearLayout>

            <View
                android:id="@+id/start_activity_second_devider"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/start_activity_last_sync_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Last sync" />

                <TextView
                    android:id="@+id/start_activity_last_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="27 Jun 2014 : 16:33" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/start_activity_second_devider"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/start_activity_info_layout"
            android:layout_marginBottom="15dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/start_activity_complient_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/start_activity_second_devider"
            android:drawableLeft="@drawable/ic_launcher"
            android:gravity="center_vertical"
            android:text="@string/app_name" />

        <Button
            android:id="@+id/start_activity_apply_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/start_activity_second_devider"
            android:layout_marginRight="15dp"
            android:text="Apply All"
            android:textColor="@android:color/white" />

        <View
            android:id="@+id/start_activity_third_devider"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/start_activity_apply_button"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#ECECEC" />

        <LinearLayout
            android:id="@+id/start_activity_list_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_activity_third_devider"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>

</ScrollView>